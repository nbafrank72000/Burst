<% provide(:title, "Edit Article") %>

<div class = "edit_article_page">
	<div class = "title">edit article</div>
	<div class = "col-md-8 col-md-offset-2">
		<%= form_for(@article) do |f| %>
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control" %>

				<%= f.label :content %>
				<%= f.text_area :content, class: "content form-control" %>

				<%= f.submit "Update Article", class: "btn btn-primary" %>
			<% end %>
		</div>
</div>